.filter-sort__sort
  %button.btn.btn-default.dropdown-toggle{data: {toggle: 'dropdown'}}
    Sort
    %span.caret
  .dropdown-menu.options
    %ul
      - sort_options.each do |opt|
        %li
          - if opt[:visible]
            = link_to sort_url(@q, opt[:column], default_order: opt[:direction]), class: 'd-flex align-items-baseline' do
              - if @column == opt[:column] && @direction == opt[:direction]
                %span.icon-checkbox-checked.mr-1
                = opt[:title]
              - else
                %span.icon-checkbox-unchecked.mr-1
                = opt[:title]
