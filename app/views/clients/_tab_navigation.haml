%ul.nav.nav-tabs.margin-bottom-02
  - if active == 'show'
    %li.active{role: 'presentation'}
      %a{href: '#'} 
        Client Details
  - else
    %li= link_to 'Client Details', client_path(id: client_id)

  - if active == 'matches'
    %li.active{role: 'presentation'}
      %a{href: '#'} 
        CAS Housing History
  - else
    %li  
      = link_to 'CAS Housing History', client_matches_path(client_id: client_id)

  - if active == 'contacts'
    %li.active{role: 'presentation'}
      %a{href: '#'} 
        Contacts
  - else
    %li  
      = link_to 'Contacts', client_contacts_path(client_id: client_id)

  - if active == 'qualified_opportunities'
    %li.active{role: 'presentation'}
      %a{href: '#'} 
        = _('Qualified Opportunities')
  - else
    %li  
      = link_to _('Qualified Opportunities'), client_qualified_opportunities_path(client_id: client_id)