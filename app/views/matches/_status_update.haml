- status_update = @match.status_updates.incomplete_for_contact(contact: access_context.current_contact).first
.row
  .col-xs-12
    .match-status-update
      %p 
        = "This match has been stalled since #{@match.current_decision.updated_at.to_date}.  Please provide an update to the status of the match."
      = simple_form_for status_update, url: match_progress_update_path do |f|
        = f.input :response, collection: status_update.responses, label: 'Status Update'
        = f.input :note, label: 'Additional notes', input_html: {rows: 8}
        = f.button :submit, class: 'btn btn-primary', value: 'Submit Status Update'
