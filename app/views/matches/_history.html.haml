.row  
  .col-xs-12
    %h3.history History
    .row
      .col-sm-7
        %p.history--note ** All notes recorded in these match process pages will be visible in the history list below.**
      .col-sm-5.text-right
        - if can_reissue_notifications?
          - if @match.current_decision.present? && @match.current_decision.notifications_for_this_step.any?
            = link_to 'Resend all notifications for current step', recreate_notifications_match_decision_path(@match, @match.current_decision), class: 'btn btn-secondary margin-bottom-02'
    %table.table.table-condensed.table-striped
      %tbody
      - match.timeline_events.sort_by(&:timestamp).reverse.each do |event|
        %tr
          %td.history--date= event.timestamp.try(:strftime, '%m/%d/%Y')
          %td.history--event-name      
            = event.name
            - if event.note.present?
              .history--event-note
                - if event.is_editable?
                  %strong Note:
                  = event.note
                  - if event.note_editable_by? current_contact
                    .history--event-note--actions
                      =link_to edit_match_note_path(match, event, match_note_referrer_params), data: {loads_in_pjax_modal: true} do
                        %span.icon-pencil
                        Edit Note
                      =link_to match_note_path(match, event, match_note_referrer_params), data: {method: :delete, confirm: 'Are you sure you want to delete this note?'} do
                        %span.icon-cross
                        Delete Note
                - else
                  = event.note
          %td.history--contact-name= event.contact_name
          - if can_reissue_notifications?
            %td.history--resend-notification
              - if event.notification.present? && event.notification.decision == @match.current_decision
                = link_to 'Re-send notification', resend_notification_path(event.notification.code)