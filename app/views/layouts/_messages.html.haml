- if user_signed_in? && current_user.in_app_messages?
  .email-messages.dropdown
    %a.dropdown-toggle.email-messages-envelope.c-header-nav__link{ href: '#', role: 'button', data: { toggle: 'dropdown' } }
      %i.icon-envelope-o
      %span.message-count.badge.hide
    %ul.dropdown-menu.dropdown-menu-right
      %li
        .btn-group{role: :group}
          = link_to messages_path(search: :all), class: 'btn btn-light show-all' do
            All messages
          = link_to messages_path, class: 'btn btn-light show-all' do
            New messages

  - content_for :page_js do
    :javascript
      App.Users.Messages = new App.Users.Messages(#{poll_messages_path.to_json}, #{seen_messages_path.to_json});
